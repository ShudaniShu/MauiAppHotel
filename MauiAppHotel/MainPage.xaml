<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAppHotel.MainPage"
    Title="Somos Pet Friendly"
    BackgroundColor="#F7F7F7">

    <!-- Paleta local (evita depender de Colors.xaml) -->
    <ContentPage.Resources>
        <Color x:Key="BrandGreen">#2E7D32</Color>
        <!-- verde do título -->
        <Color x:Key="TextPrimary">#222222</Color>
        <Color x:Key="CardBg">#FFFFFF</Color>
        <Color x:Key="Muted">#666666</Color>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">

            <!-- HEADER -->
            <Label Text="Hotel Refúgio dos Pássaros"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="{StaticResource BrandGreen}"
                   HorizontalTextAlignment="Center"/>

            <Label Text="Aqui o seu descanso é a nossa prioridade"
                   FontSize="18"
                   TextColor="{StaticResource Muted}"
                   HorizontalTextAlignment="Center"/>

            <!-- BANNER (adicione banner_refugio.png em Resources/Images/) -->
            <Frame Padding="0" CornerRadius="16" HasShadow="True" BackgroundColor="{StaticResource CardBg}">
                <Image Source="hero_nature.png"
                       Aspect="AspectFill"
                       HeightRequest="180"/>
            </Frame>

            <!-- CARTÃO: SELEÇÃO DO QUARTO + FOTO -->
            <Frame CornerRadius="14" Padding="16" HasShadow="True" BackgroundColor="{StaticResource CardBg}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Selecione o quarto"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="{StaticResource TextPrimary}"/>

                    <Picker x:Name="RoomTypePicker"
                            Title="Escolha um recanto"
                            SelectedIndexChanged="OnRoomTypeChanged">
                        <Picker.Items>
                            <x:String>Recanto dos Pássaros</x:String>
                            <x:String>Recanto das Araras</x:String>
                            <x:String>Recanto dos Sabiás</x:String>
                            <x:String>Floresta Encantada</x:String>
                        </Picker.Items>
                    </Picker>

                    <Label x:Name="RoomTypeLabel"
                           Text="Nenhum tipo selecionado"
                           FontSize="14"
                           TextColor="{StaticResource Muted}"/>

                    <!-- Foto do quarto (inteira, sem cortes) -->
                    <Frame Padding="0" CornerRadius="12" HasShadow="False"
                           BackgroundColor="#00000010"
                           IsVisible="{Binding Source={x:Reference RoomImage}, Path=IsVisible}">
                        <Image x:Name="RoomImage"
                               IsVisible="False"
                               Aspect="AspectFit"
                               Margin="0,8,0,0"/>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- CARTÃO: HÓSPEDES -->
            <Frame CornerRadius="14" Padding="16" HasShadow="True" BackgroundColor="{StaticResource CardBg}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Hóspedes"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="{StaticResource TextPrimary}"/>

                    <Label Text="Adultos" FontAttributes="Bold"/>
                    <Stepper x:Name="AdultsStepper"
                             Minimum="1" Maximum="6" Value="1"
                             ValueChanged="OnGuestStepperChanged"/>

                    <Label Text="Crianças" FontAttributes="Bold" Margin="0,6,0,0"/>
                    <Stepper x:Name="ChildrenStepper"
                             Minimum="0" Maximum="6" Value="0"
                             ValueChanged="OnGuestStepperChanged"/>

                    <Label x:Name="GuestsSummaryLabel"
                           Text="Total de hóspedes: 1 (Adultos: 1, Crianças: 0)"
                           TextColor="{StaticResource Muted}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- AÇÕES -->
            <HorizontalStackLayout Spacing="12">
                <Button x:Name="CounterBtn"
                        Text="Click me"
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnCounterClicked" />
                <Button Text="Sobre"
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnSobreClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
